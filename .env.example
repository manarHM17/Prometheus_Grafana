# Binding address for all services (default: 0.0.0.0)
BIND_ADDRESS=0.0.0.0

# Grafana credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_in_production

# AlertManager configuration
SMTP_FROM=alerts@example.com
SMTP_SERVER=smtp.example.com
SMTP_USER=alerts@example.com
SMTP_PASSWORD=change_me_in_production
ALERT_EMAIL=your-email@example.com

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Targets for monitoring (examples)
APP_URLS=http://app1.example.com,http://app2.example.com
DB_HOSTS=db1.example.com:5432,db2.example.com:5432